<Window x:Class="SpravochnikTurista.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpravochnikTurista"
        mc:Ignorable="d"
        Title="MainPage" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.RowDefinitions >
            <RowDefinition Height="40"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#0F0F0F" Orientation="Horizontal">
            <Button x:Name="HomeBtn"
                    Width="150" Height="30" FontSize="20"
                    Foreground="White" Background="Gray"
                    Margin="15 0 0 0" FontFamily="Comic Sans MS" Content="Домой" Click="HomeBtnClick"
            />
        </StackPanel>
    </Grid>
</Window>