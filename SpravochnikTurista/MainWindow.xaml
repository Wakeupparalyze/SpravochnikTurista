<Page x:Class="SpravochnikTurista.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpravochnikTurista"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="300"
      Title="MainWindow">
    <StackPanel Background="Black">
        <Grid HorizontalAlignment="Center" Margin="100" VerticalAlignment="Center" MinWidth="400" MinHeight="200" Background="Black">
            <StackPanel>
                <Label Foreground="White" HorizontalAlignment="Center" Content="Авторизация"/>
                <Label Margin="0 15 0 0" Foreground="White" HorizontalAlignment="Center" Content="Логин"/>
                <TextBox Background="Gray" Foreground="White" x:Name="LoginBox" Text=""/>
                <Label Margin="0 15 0 0" Foreground="White" HorizontalAlignment="Center" Content="Пароль"/>
                <TextBox Background="Gray" Foreground="White" x:Name="PasswordBox" Text="" />
                <Button Margin="0 30 0 0" Content="Авторизоваться" Click="AuthBtnClick"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Page>
